#include <graphics.h>
#include <windows.h>

using namespace std;

int flag = 0;
void draw(){
	for(int i=0;i<181;i+=60){
		rectangle(315,300+i,365,350+i);
		rectangle(375,300+i,425,350+i);
		rectangle(435,300+i,485,350+i);
	}
	rectangle(315,230,485,280);
	
	outtextxy(335,320,"1");
	outtextxy(395,320,"2");
	outtextxy(455,320,"3");
	outtextxy(335,380,"4");
	outtextxy(395,380,"5");
	outtextxy(455,380,"6");
	outtextxy(335,440,"7");
	outtextxy(395,440,"8");
	outtextxy(455,440,"9");
	outtextxy(335,500,"<");
	outtextxy(395,500,"0");
	outtextxy(455,500,">");
}

void input_number(int a[], int n, int i){
	while(1){
		if(GetAsyncKeyState(49)){
			a[i] = 1;
			break;
		}
		if(GetAsyncKeyState(50)){
			a[i] = 2;
			break;
		}
		if(GetAsyncKeyState(51)){
			a[i] = 3;
			break;
		}
		if(GetAsyncKeyState(52)){
			a[i] = 4;
			break;
		}
		if(GetAsyncKeyState(53)){
			a[i] = 5;
			break;
		}
		if(GetAsyncKeyState(54)){
			a[i] = 6;
			break;
		}
		if(GetAsyncKeyState(55)){
			a[i] = 7;
			break;
		}
		if(GetAsyncKeyState(56)){
			a[i] = 8;
			break;
		}
		if(GetAsyncKeyState(57)){
			a[i] = 9;
			break;
		}
		if(GetAsyncKeyState(58)){
			a[i] = 0;
			break;
		}
	}
}

void star(int i)
{
	if(i==1)
	{
		outtextxy(349,250,"*");
	}
	if(i==2)
	{
		outtextxy(383,250,"*");
	}
	if(i==3)
	{
		outtextxy(417,250,"*");	
	}
	if(i==4)
	{
		outtextxy(451,250,"*");	
	}

}

void accept(){
	cleardevice();
	settextstyle(1,0,5);
	outtextxy(300,280,"Accept");
	delay(1000);
	flag = 1;
}

void error(){
	cleardevice();
	settextstyle(1,0,5);
	outtextxy(330,280,"Error");
	delay(1000);
	flag = 0;
	
}

void check(int a[],int n)
{
	if(a[1]==1&&a[2]==2&&a[3]==3&&a[4]==4)
	{
		accept();
	}
	else
		error();
}

main(){
	int n = 4;
	int pin[n];
	
	while(flag == 0){
		initwindow(800,600,"LOGIN");
		draw();
		for(int i=1;i<=4;i++){
   		input_number(pin,n,i);
   		star(i);
   		delay(250);
		}
		delay(1000);
		check(pin,n);
	}
	getch();
	closegraph();
	return 0;
}
